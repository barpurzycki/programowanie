#include<iostream>
using namespace std;
 
int main()
{
int i,j;
string wyraz;
 
cout << "Podaj wyraz: ";
cin >> wyraz;
for (i = 0, j = wyraz.length()-1; i < j; i++, j--)
{
if (wyraz[i] != wyraz[j])
break;
}
if (i < j)
cout << "nie jest palindromem" << endl;
else
cout << "jest palindromem" << endl;
}
